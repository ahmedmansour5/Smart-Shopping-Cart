<FlatButton@ButtonBehavior+Label>:
    font_size: 14

<MapWindow>:
    id: main_win
    orientation: "vertical"
    spacing: 10
    space_x: self.size[0]/3
    canvas.before:
        Color:
            rgba: (1,1,1, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: header
        size_hint_y: None
        height: 60
        canvas.before:
            Color:
                rgba: (.06, .45, .45, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: "STORE MAP"
            bold: True
            size_hint_x: .9
            font_size: 20
        FlatButton:
            id: loggedin_user
            text: 'Back'
            color: (1,1,1,1)
            size_hint_x: .1
            underline: True
            on_release: root.go_back()


    BoxLayout:
        id: content_nav
        
        BoxLayout:
            id: nav_tabs
            size_hint_x: .2
            size_hint_y: 1.014
            orientation: 'vertical'
            spacing: 8
            canvas.before:
                Color:
                    rgba: (.06, .52, .52,1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            ToggleButton:
                id: map_toggle
                text: 'Full Map'
                size_hint_y: .1
                state: 'down'
                background_color: (.06, .47, .47, 1)
                background_normal: ''
                group: 'map_navs'
                on_state: root.change_screen(self)
            ToggleButton:
                id: food_toggle
                text: 'Go to Luggage'
                size_hint_y: .1
                background_color: (.06, .47, .47, 1)
                background_normal: ''
                group: 'map_navs'
